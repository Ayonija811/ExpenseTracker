<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpenseActivity">

  <!-- TextView -->
  <TextView
      android:id="@+id/labelTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Expense Details"
      android:textSize="20sp"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp" />

  <!-- Entertainment Expense -->
  <EditText
      android:id="@+id/ed_entertainment"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Entertainment Expense"
      android:inputType="numberDecimal"
      app:layout_constraintTop_toBottomOf="@id/labelTextView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <!-- Food Expense -->
  <EditText
      android:id="@+id/ed_food"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Food Expense"
      android:inputType="numberDecimal"
      app:layout_constraintTop_toBottomOf="@id/ed_entertainment"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <!-- Rent Expense -->
  <EditText
      android:id="@+id/ed_rent"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Rent Expense"
      android:inputType="numberDecimal"
      app:layout_constraintTop_toBottomOf="@id/ed_food"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <!-- Travel Expense -->
  <EditText
      android:id="@+id/ed_travel"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Travel Expense"
      android:inputType="numberDecimal"
      app:layout_constraintTop_toBottomOf="@id/ed_rent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <!-- Miscellaneous Expense -->
  <EditText
      android:id="@+id/ed_miscellaneous"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Miscellaneous Expense"
      android:inputType="numberDecimal"
      app:layout_constraintTop_toBottomOf="@id/ed_travel"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <!-- Total Expense -->
  <TextView
      android:id="@+id/tv_totalExpense"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Total Expense"
      android:inputType="numberDecimal"
      app:layout_constraintTop_toBottomOf="@id/ed_miscellaneous"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <Button
      android:id="@+id/btn_submit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Submit"
      app:layout_constraintTop_toBottomOf="@id/tv_totalExpense"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

